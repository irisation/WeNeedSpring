<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <bean id="counter" class="spring.Counter">
        <constructor-arg type="java.lang.String" value="input.txt">
            <ref bean="wordsContainer" />
        </constructor-arg>

    </bean>

    <bean class="spring.WordsContainer" id="wordsContainer">
        <property name="fileName" value="input.txt"/>
    </bean>
</beans>